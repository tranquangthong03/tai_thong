@{
    ViewData["Title"] = "Truy cập bị từ chối";
}

<div class="container py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h1 class="display-5 fw-bold">@ViewData["Title"]</h1>
                </div>
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 5rem;"></i>
                    </div>
                    <p class="lead">Bạn không có quyền truy cập vào trang này.</p>
                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-lg px-4 me-sm-3">Quay lại trang chủ</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 