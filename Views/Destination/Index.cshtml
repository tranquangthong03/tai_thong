@model IEnumerable<TravelWebsite.Models.Destination>

@{ 
    ViewData["Title"] = "Danh sách Điểm đến";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Thêm mới Điểm đến</a>
    </p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text"><small class="text-muted">@item.City, @item.Country</small></p>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">
                            <strong>Đánh giá:</strong> @item.Rating / 5 <i class="bi bi-star-fill text-warning"></i>
                        </p>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi tiết</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 