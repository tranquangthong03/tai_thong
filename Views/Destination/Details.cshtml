@model TravelWebsite.Models.Destination

@{ 
    ViewData["Title"] = "Chi tiết Điểm đến";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]: @Model.Name</h1>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded mb-4" style="max-height: 400px; width: 100%; object-fit: cover;" />
            
            <dl class="row">
                <dt class="col-sm-3">Tên:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">Mô tả:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3">Quốc gia:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Country)</dd>

                <dt class="col-sm-3">Thành phố:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.City)</dd>

                <dt class="col-sm-3">Đánh giá:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Rating) / 5 <i class="bi bi-star-fill text-warning"></i></dd>

                <dt class="col-sm-3">Nổi bật:</dt>
                <dd class="col-sm-9">@(Model.IsPopular ? "Có" : "Không")</dd>

                <dt class="col-sm-3">Hoạt động:</dt>
                <dd class="col-sm-9">@(Model.IsActive ? "Có" : "Không")</dd>

                <dt class="col-sm-3">Ngày tạo:</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                @if (Model.UpdatedAt.HasValue)
                {
                    <dt class="col-sm-3">Ngày cập nhật:</dt>
                    <dd class="col-sm-9">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                }
            </dl>

            <h3 class="mt-5 mb-3">Các Tour liên quan</h3>
            @if (Model.Tours != null && Model.Tours.Any())
            {
                <div class="row">
                    @foreach (var tour in Model.Tours)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">@tour.Name</h5>
                                    <a href="#" class="btn btn-primary btn-sm">Xem Tour</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p>Chưa có tour nào cho điểm đến này.</p>
            }

        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Sửa</a> 
        <a asp-action="Index" class="btn btn-secondary">Quay lại Danh sách</a>
    </div>
</div> 