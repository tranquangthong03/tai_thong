@model TravelWebsite.Models.Destination

@{ 
    ViewData["Title"] = "Xóa Điểm đến";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]: @Model.Name</h1>
    <hr />
    <h3 class="text-danger mb-3">Bạn có chắc chắn muốn xóa điểm đến này không?</h3>
    <p class="text-danger">(Lưu ý: Hành động này sẽ chỉ đánh dấu điểm đến là không hoạt động, không xóa vĩnh viễn khỏi cơ sở dữ liệu)</p>

    <div>
        <h4>Thông tin Điểm đến</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Tên:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">Quốc gia:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Country)</dd>

            <dt class="col-sm-3">Thành phố:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.City)</dd>
        </dl>
        
        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">Xác nhận Xóa</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
        </form>
    </div>
</div> 