@model IEnumerable<TravelWebsite.Models.Tour>
@{
    ViewData["Title"] = "Tour Du Lịch";
}

<div class="container py-5">
    <!-- Page Title -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="fw-bold">Tour Du Lịch</h2>
            <p class="text-muted">Khám phá các tour du lịch hấp dẫn của chúng tôi</p>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="col-md-4 text-end">
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Thêm Tour Mới
                </a>
            </div>
        }
    </div>

    <!-- Filter -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">Tìm kiếm tour</h5>
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="searchName" class="form-label">Tên tour</label>
                    <input type="text" class="form-control" id="searchName" name="searchName" placeholder="Nhập tên tour...">
                </div>
                <div class="col-md-3">
                    <label for="minPrice" class="form-label">Giá từ</label>
                    <input type="number" class="form-control" id="minPrice" name="minPrice" placeholder="VNĐ">
                </div>
                <div class="col-md-3">
                    <label for="maxPrice" class="form-label">Giá đến</label>
                    <input type="number" class="form-control" id="maxPrice" name="maxPrice" placeholder="VNĐ">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Tours List -->
    <div class="row g-4">
        @if (Model.Any())
        {
            @foreach (var tour in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 border-0 shadow-sm tour-card">
                        <div class="position-relative">
                            <img src="@(string.IsNullOrEmpty(tour.ImageUrl) ? $"https://source.unsplash.com/random/800x600/?travel,{tour.Name}" : tour.ImageUrl)" 
                                 class="card-img-top" alt="@tour.Name" style="height: 220px; object-fit: cover;">
                            <div class="position-absolute top-0 end-0 bg-primary text-white px-3 py-2 m-2 rounded-pill">
                                <strong>@tour.Price.ToString("N0") VNĐ</strong>
                            </div>
                            @if (tour.IsPopular)
                            {
                                <div class="position-absolute top-0 start-0 bg-warning text-dark px-2 py-1 m-2 rounded">
                                    <i class="bi bi-star-fill me-1"></i> Phổ biến
                                </div>
                            }
                        </div>
                        <div class="card-body">
                            <h5 class="card-title mb-3">@tour.Name</h5>
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-geo-alt me-2 text-primary"></i>
                                <span>@tour.Destination.Name, @tour.Destination.Country</span>
                            </div>
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-clock me-2 text-primary"></i>
                                <span>@(tour.Duration.HasValue ? $"{tour.Duration} ngày" : "Liên hệ để biết thêm chi tiết")</span>
                            </div>
                            <p class="card-text text-muted">@(string.IsNullOrEmpty(tour.Description) 
                                ? "Khám phá tour du lịch tuyệt vời này cùng chúng tôi." 
                                : (tour.Description.Length > 100 ? tour.Description.Substring(0, 100) + "..." : tour.Description))</p>
                        </div>
                        <div class="card-footer bg-white border-top-0 pt-0">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@tour.Id" class="btn btn-outline-primary">
                                    Xem chi tiết
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@tour.Id" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-pencil"></i> Sửa
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@tour.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Xóa
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <i class="bi bi-ticket-perforated display-1 text-muted"></i>
                <h4 class="mt-3">Không tìm thấy tour du lịch nào</h4>
                <p class="text-muted">Hiện tại không có tour du lịch nào phù hợp với tiêu chí tìm kiếm của bạn.</p>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Create" class="btn btn-primary mt-3">
                        <i class="bi bi-plus-circle"></i> Thêm Tour Mới
                    </a>
                }
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .tour-card {
            transition: all 0.3s ease;
        }
        .tour-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
    </style>
} 