<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travel Website</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/modern-footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TravelWebsite.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-airplane me-2"></i>Travel Website
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && 
                               ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" 
                               asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i>Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Destination" ? "active" : "")" 
                               asp-area="" asp-controller="Destination" asp-action="Index">
                                <i class="bi bi-geo-alt me-1"></i>Điểm đến
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Tour" ? "active" : "")" 
                               asp-area="" asp-controller="Tour" asp-action="Index">
                                <i class="bi bi-map me-1"></i>Tours
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Privacy" ? "active" : "")" 
                               asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-check me-1"></i>Chính sách
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>    <div class="container flex-grow-1" style="margin-top: 80px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="modern-footer">
        <div class="footer-wave">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
                <path fill="#ffffff" fill-opacity="1" d="M0,224L48,213.3C96,203,192,181,288,181.3C384,181,480,203,576,202.7C672,203,768,181,864,181.3C960,181,1056,203,1152,208C1248,213,1344,203,1392,197.3L1440,192L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path>
            </svg>
        </div>
        
        <!-- Background decorative elements -->
        <div class="footer-bg-element footer-bg-circle-1"></div>
        <div class="footer-bg-element footer-bg-circle-2"></div>
        
        <div class="footer-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-6 mb-5 mb-lg-0">
                        <div class="footer-brand">
                            <h3 class="footer-logo">
                                <i class="bi bi-airplane me-2"></i>Travel Website
                            </h3>
                            <p class="footer-tagline">Khám phá những điểm đến tuyệt vời cùng chúng tôi. Chúng tôi mang đến những trải nghiệm du lịch đáng nhớ nhất.</p>
                            
                            <div class="newsletter-form">
                                <input type="email" class="newsletter-input" placeholder="Email của bạn">
                                <button class="newsletter-button">Đăng ký <i class="bi bi-send ms-1"></i></button>
                                <p class="newsletter-disclaimer">Nhận thông tin về ưu đãi và điểm đến mới</p>
                            </div>
                            
                            <div class="footer-awards">
                                <img src="https://placehold.co/75x30/ffffff40/ffffff?text=Award" alt="Award" class="footer-award">
                                <img src="https://placehold.co/75x30/ffffff40/ffffff?text=Award" alt="Award" class="footer-award">
                                <img src="https://placehold.co/75x30/ffffff40/ffffff?text=Award" alt="Award" class="footer-award">
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-lg-2 col-md-6 mb-4 mb-lg-0">
                        <div class="footer-widget" style="--widget-order: 1;">
                            <h5 class="footer-heading">Khám phá</h5>
                            <ul class="footer-links">
                                <li>
                                    <a asp-controller="Home" asp-action="Index" class="footer-link">
                                        <i class="bi bi-chevron-right"></i>Trang chủ
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Destination" asp-action="Index" class="footer-link">
                                        <i class="bi bi-chevron-right"></i>Điểm đến
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Tour" asp-action="Index" class="footer-link">
                                        <i class="bi bi-chevron-right"></i>Tours
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="footer-link">
                                        <i class="bi bi-chevron-right"></i>Khuyến mãi
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="footer-link">
                                        <i class="bi bi-chevron-right"></i>Blog du lịch
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Home" asp-action="Privacy" class="footer-link">
                                        <i class="bi bi-chevron-right"></i>Chính sách
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="col-lg-2 col-md-6 mb-4 mb-lg-0">
                        <div class="footer-widget" style="--widget-order: 2;">
                            <h5 class="footer-heading">Điểm đến hot</h5>
                            <ul class="footer-links">
                                <li>
                                    <a href="#" class="footer-link">
                                        <i class="bi bi-geo-alt"></i>Hà Nội
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="footer-link">
                                        <i class="bi bi-geo-alt"></i>Đà Nẵng
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="footer-link">
                                        <i class="bi bi-geo-alt"></i>Hồ Chí Minh
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="footer-link">
                                        <i class="bi bi-geo-alt"></i>Phú Quốc
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="footer-link">
                                        <i class="bi bi-geo-alt"></i>Nha Trang
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="footer-link">
                                        <i class="bi bi-geo-alt"></i>Đà Lạt
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="col-lg-4 col-md-6">
                        <div class="footer-widget" style="--widget-order: 3;">
                            <h5 class="footer-heading">Liên hệ với chúng tôi</h5>
                            <ul class="footer-contact">
                                <li>
                                    <div class="footer-contact-icon">
                                        <i class="bi bi-geo-alt-fill"></i>
                                    </div>
                                    <div class="footer-contact-text">
                                        123 Đường Du Lịch, Quận 1<br>Thành phố Hồ Chí Minh, Việt Nam
                                    </div>
                                </li>
                                <li>
                                    <div class="footer-contact-icon">
                                        <i class="bi bi-telephone-fill"></i>
                                    </div>
                                    <div class="footer-contact-text">
                                        +84 123 456 789
                                    </div>
                                </li>
                                <li>
                                    <div class="footer-contact-icon">
                                        <i class="bi bi-envelope-fill"></i>
                                    </div>
                                    <div class="footer-contact-text">
                                        info@travelwebsite.com
                                    </div>
                                </li>
                                <li>
                                    <div class="footer-contact-icon">
                                        <i class="bi bi-clock-fill"></i>
                                    </div>
                                    <div class="footer-contact-text">
                                        Thứ 2 - Chủ nhật: 08:00 - 22:00
                                    </div>
                                </li>
                            </ul>
                            
                            <div class="footer-social">
                                <h5 class="footer-heading mb-3">Kết nối</h5>
                                <div class="social-links">
                                    <a href="#" class="social-link" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
                                    <a href="#" class="social-link" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
                                    <a href="#" class="social-link" aria-label="Twitter"><i class="bi bi-twitter"></i></a>
                                    <a href="#" class="social-link" aria-label="YouTube"><i class="bi bi-youtube"></i></a>
                                    <a href="#" class="social-link" aria-label="Linkedin"><i class="bi bi-linkedin"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="footer-divider"></div>
        
        <div class="footer-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <div class="footer-copyright">
                            © @DateTime.Now.Year <strong>Travel Website</strong>. Đã đăng ký Bản quyền.
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="footer-bottom-links">
                            <a href="#" class="footer-bottom-link">Chính sách bảo mật</a>
                            <a href="#" class="footer-bottom-link">Điều khoản sử dụng</a>
                            <a href="#" class="footer-bottom-link">FAQs</a>
                            <a href="#" class="footer-bottom-link">Sitemap</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <a href="#" class="back-to-top">
            <i class="bi bi-arrow-up"></i>
        </a>
    </footer>    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/destination-filter.js" asp-append-version="true"></script>
    <!-- <script src="~/js/testimonials-fix.js" asp-append-version="true"></script> -->
    <script src="~/js/modern-footer.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init({
        duration: 800,
        once: true
      });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>