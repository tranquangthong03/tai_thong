<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travel Website</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TravelWebsite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-airplane me-2"></i>Travel Website
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" && 
                               ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")" 
                               asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i>Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Destination" ? "active" : "")" 
                               asp-area="" asp-controller="Destination" asp-action="Index">
                                <i class="bi bi-geo-alt me-1"></i>Điểm đến
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Tour" ? "active" : "")" 
                               asp-area="" asp-controller="Tour" asp-action="Index">
                                <i class="bi bi-map me-1"></i>Tours
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Privacy" ? "active" : "")" 
                               asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-check me-1"></i>Chính sách
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-top: 80px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark text-light py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="text-uppercase fw-bold">Travel Website</h5>
                    <p class="mt-3">Khám phá những điểm đến tuyệt vời với dịch vụ du lịch chất lượng cao của chúng tôi.</p>
                    <div class="mt-3">
                        <a href="#" class="text-light me-3"><i class="bi bi-facebook fs-4"></i></a>
                        <a href="#" class="text-light me-3"><i class="bi bi-instagram fs-4"></i></a>
                        <a href="#" class="text-light me-3"><i class="bi bi-twitter fs-4"></i></a>
                        <a href="#" class="text-light"><i class="bi bi-youtube fs-4"></i></a>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 class="text-uppercase fw-bold">Liên hệ</h5>
                    <ul class="list-unstyled mt-3">
                        <li class="mb-2"><i class="bi bi-geo-alt me-2"></i>123 Đường Du Lịch, TP. Hồ Chí Minh</li>
                        <li class="mb-2"><i class="bi bi-telephone me-2"></i>(+84) 123 456 789</li>
                        <li><i class="bi bi-envelope me-2"></i>info@travelwebsite.com</li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="text-uppercase fw-bold">Đường dẫn</h5>
                    <ul class="list-unstyled mt-3">
                        <li class="mb-2"><a asp-controller="Home" asp-action="Index" class="text-light text-decoration-none">Trang chủ</a></li>
                        <li class="mb-2"><a asp-controller="Destination" asp-action="Index" class="text-light text-decoration-none">Điểm đến</a></li>
                        <li class="mb-2"><a asp-controller="Tour" asp-action="Index" class="text-light text-decoration-none">Tours</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-light text-decoration-none">Chính sách</a></li>
                    </ul>
                </div>
            </div>
            <hr class="mt-4" />
            <div class="text-center">
                &copy; @DateTime.Now.Year - Travel Website - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-light">Chính sách</a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
