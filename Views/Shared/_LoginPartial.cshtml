@using Microsoft.AspNetCore.Identity
@using TravelWebsite.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle profile-link" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            @if (await UserManager.GetUserAsync(User) != null && (await UserManager.GetUserAsync(User)).ProfilePicture != null)
            {
                <img class="profile-picture" 
                     src="data:image/*;base64,@(Convert.ToBase64String((await UserManager.GetUserAsync(User)).ProfilePicture))" 
                     alt="Profile picture" />
            }
            else
            {
                <i class="bi bi-person-circle"></i>
            }
            @{
                var user = await UserManager.GetUserAsync(User);
                var displayName = $"{user?.FirstName} {user?.LastName}";
                if (string.IsNullOrWhiteSpace(displayName.Trim()))
                {
                    displayName = User.Identity?.Name ?? "Tài khoản";
                }
            }
            <span>@displayName</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index"><i class="bi bi-person"></i>Hồ sơ cá nhân</a></li>
            <li><a class="dropdown-item" asp-controller="Booking" asp-action="MyBookings"><i class="bi bi-calendar-check"></i>Đặt tour của tôi</a></li>
            @if (User.IsInRole("Admin"))
            {
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" asp-controller="RoleManager" asp-action="Index"><i class="bi bi-shield"></i>Quản lý vai trò</a></li>
                <li><a class="dropdown-item" asp-controller="UserRoles" asp-action="Index"><i class="bi bi-people"></i>Quản lý người dùng</a></li>
            }
            <li><hr class="dropdown-divider"></li>
            <li>
                <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="dropdown-item text-danger">
                        <i class="bi bi-box-arrow-right"></i>Đăng xuất
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <div class="d-flex gap-2">
        <a class="btn btn-outline-light btn-sm rounded-pill" asp-controller="Account" asp-action="Login">
            <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
        </a>
        <a class="btn btn-light btn-sm rounded-pill" asp-controller="Account" asp-action="Register">
            <i class="bi bi-person-plus"></i> Đăng ký
        </a>
    </div>
}
</ul> 