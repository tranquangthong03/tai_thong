@model List<TravelWebsite.ViewModels.ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Quản lý vai trò người dùng";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Quản lý vai trò cho người dùng: @ViewBag.UserName</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        @for (var i = 0; i < Model.Count; i++)
                        {
                            <div class="form-check mb-2">
                                <input type="hidden" asp-for="@Model[i].RoleId" />
                                <input type="hidden" asp-for="@Model[i].RoleName" />
                                <input asp-for="@Model[i].Selected" class="form-check-input" />
                                <label class="form-check-label" asp-for="@Model[i].Selected">
                                    @Model[i].RoleName
                                </label>
                            </div>
                        }

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 