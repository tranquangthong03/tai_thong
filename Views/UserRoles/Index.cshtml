@model List<TravelWebsite.ViewModels.UserRolesViewModel>
@{
    ViewData["Title"] = "Quản lý người dùng và vai trò";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Quản lý người dùng và vai trò</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Tên đăng nhập</th>
                                    <th>Họ</th>
                                    <th>Tên</th>
                                    <th>Email</th>
                                    <th>Vai trò</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td>@user.FirstName</td>
                                        <td>@user.LastName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            @string.Join(", ", user.Roles)
                                        </td>
                                        <td>
                                            <a asp-action="Manage" asp-route-userId="@user.UserId" class="btn btn-primary btn-sm">
                                                <i class="bi bi-pencil-square"></i> Quản lý vai trò
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 