@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Quản lý vai trò";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Quản lý vai trò</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="AddRole" class="mb-4">
                        <div class="input-group">
                            <input name="roleName" class="form-control" placeholder="Tên vai trò mới">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-plus-circle me-1"></i>Thêm vai trò
                                </button>
                            </div>
                        </div>
                    </form>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Mã vai trò</th>
                                    <th>Tên vai trò</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in Model)
                                {
                                    <tr>
                                        <td>@role.Id</td>
                                        <td>@role.Name</td>
                                        <td>
                                            <form method="post" asp-action="DeleteRole" asp-route-id="@role.Id" onsubmit="return confirm('Bạn có chắc chắn muốn xóa vai trò này?');">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="bi bi-trash"></i> Xóa
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 